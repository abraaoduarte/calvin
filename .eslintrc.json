{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": ["./tsconfig.json"],
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "@typescript-eslint/no-var-requires": "off",
        "import/extensions": "off"
    },
    "settings": {
        "import/resolver": {
            "typescript": {},
            "node": {
              "paths": ["src"],
              "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    }
}
